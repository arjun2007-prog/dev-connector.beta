<!-- This is the place where the user is able to put his other job experience and eductaion -->
<%-include("partials/header.ejs");-%>
<div class="make-profile">
  <div class="your-progress">
    <h2>Your Profile progress</h2>
    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width : 10%" aria-valuenow="25" aria-valuemin="0"
        aria-valuemax="100"></div>
    </div>
  </div>

  <h1>Update Your Profile</h1>
  <!-- when user clicks on these it should take them to a form yo fill out the details -->
  <div class="update-buttons">
    <button class="special experience">Experience</button>

    <form action="/experience" method="post">
      <div class="experience-form form hidden">
        <input type="text" placeholder="Company Name" name="companyName">
        <textarea name="summary" id="" cols="50" rows="10" placeholder="Summary"></textarea>
        <button type="submit" value="<%=currentUserEmail%>" name="userEmail" class="save" >Save</button>
      </div>
    </form>

    <button class="special projects">Projects</button>


    <form action="/projects" method="post">

      <div class="projects-form form hidden">
        <input type="text" placeholder="projectName" name="projectName">
        <input type="text" placeholder="projectLink" name="projectLink">
        <textarea name="summary" id="" cols="50" rows="10" placeholder="projectSummary"></textarea>
        <button type="submit" value="<%=currentUserEmail%>" name="userEmail" class="save" >Save</button>
      </div>
    </form>


    <button class="special slills">Skills</button>


    <form action="/skills" method="post">

      <div class="skills-form form hidden">
        <input type="text" placeholder="Your Skill" name="skill">
        <button type="submit" value="<%=currentUserEmail%>" name="userEmail" class="save" >Save</button>
      </div>
    </form>
   
    <a href="/signin" class="btn btn-light">Continue <img src="right-arrow.png" alt="" srcset=""></a>
  </div>

</div>

