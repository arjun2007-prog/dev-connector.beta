<%-include("partials/header.ejs");-%>
<div class="user-profile">
    <div class="user-info jumbotron">
        <h3><%=profile.name%></h3>
    </div>
    <div class="about">
        <h1>About</h1>
       <div class="user-info jumbotron">
        <h3><%=profile.about%></h3>
    </div>
    </div>
    <div class="experience">
        <h1>Experience</h1>
        <div class="user-info jumbotron">
            
            <%profile.experience.forEach((currentData)=>{%>
                <h3><%=currentData.userExperience.jobName%></h3>
                <h5><%=currentData.userExperience.jobDescription%></h5>
            <%})%> 
        </div>
    </div>
    <div class="skills">
        <h1>Skills</h1>
        <div class="user-info jumbotron">
        <%profile.skills.forEach((currentData)=>{%>
            <h3><%=currentData.userSkill.skill%></h3>
        <%})%>   
    </div>    
    </div>
    <div class="projects">
        <h1>Projects</h1>
        <div class="user-info jumbotron">
        <%profile.projects.forEach((currentData)=>{%>
            <h3><%=currentData.userProject.projectName%></h3>
            <h3><%=currentData.userProject.summary%></h3>
            <a href="<%=currentData.userProject.projectLink%>">See Project</a>
        <%})%>   
    </div>

</div>
<%-include("partials/footer.ejs");-%>